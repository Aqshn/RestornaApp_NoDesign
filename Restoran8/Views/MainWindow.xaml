<Window x:Class="Restoran8.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restoran8.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btn1" Click="Click" Style="{StaticResource MyButtonStyle}" >Masa1</Button>
            <Button x:Name="btn2" Click="Click" Style="{StaticResource MyButtonStyle}" >Masa2</Button>
            <Button x:Name="btn3" Click="Click" Style="{StaticResource MyButtonStyle}" >Masa3</Button>
            <Button x:Name="btn4" Click="Click" Style="{StaticResource MyButtonStyle}" >Masa4</Button>
            <Button x:Name="btn5" Click="Click" Style="{StaticResource MyButtonStyle}" >Masa5</Button>
            <Button x:Name="btn6" Click="Click" Style="{StaticResource MyButtonStyle}" >Masa6</Button>
        </StackPanel>
        <TextBlock x:Name="saatTextBlock" FontSize="24" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
